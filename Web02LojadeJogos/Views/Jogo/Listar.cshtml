        <legend>Jogo Recém-Cadastrado</legend>

        <dl class="dl-horizontal">
            <!-- Output Cod -->
            <dt>@Html.DisplayNameFor(model => model.JogoCod)</dt>
            <dd>@Html.DisplayFor(model => model.JogoCod)</dd>

            <!-- Output Nome -->
            <dt>@Html.DisplayNameFor(model => model.JogoNome)</dt>
            <dd>@Html.DisplayFor(model => model.JogoNome)</dd>

            <!-- Output Versao -->
            <dt>@Html.DisplayNameFor(model => model.JogoVersao)</dt>
            <dd>@Html.DisplayFor(model => model.JogoVersao)</dd>

            <!-- Output Desenvolvedora -->
            <dt>@Html.DisplayNameFor(model => model.JogoDesenvolvedora)</dt>
            <dd>@Html.DisplayFor(model => model.JogoDesenvolvedora)</dd>

            <!-- Output Genero -->
            <dt>@Html.DisplayNameFor(model => model.JogoGenero)</dt>
            <dd>@Html.DisplayFor(model => model.JogoGenero)</dd>

            <!-- Output FaixaEtaria -->
            <dt>@Html.DisplayNameFor(model => model.JogoFaixaEtaria)</dt>
            <dd>@Html.DisplayFor(model => model.JogoFaixaEtaria)</dd>

            <!-- Output Plataforma -->
            <dt>@Html.DisplayNameFor(model => model.JogoPlataforma)</dt>
            <dd>@Html.DisplayFor(model => model.JogoPlataforma)</dd>

            <!-- Output AnoLancamento -->
            <dt>@Html.DisplayNameFor(model => model.JogoAnoLancamento)</dt>
            <dd>@Html.DisplayFor(model => model.JogoAnoLancamento)</dd>

            <!-- Output Sinopse -->
            <dt>@Html.DisplayNameFor(model => model.JogoSinopse)</dt>
            <dd>@Html.DisplayFor(model => model.JogoSinopse)</dd>
        </dl>
    </fieldset>
}

